<!-- views/fruits/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bands Index</title>
  </head>
  <body>
    <h1>All Bands</h1>
    <ul>
      <% bands.forEach(band => { %>
        <li>
            <a href="/bands/<%= band._id %>"><%= band.name %> </a>
        </li>
      <% }); %>
    </ul>
    <a href="/bands/new">Add New band</a>
  </body>
</html>